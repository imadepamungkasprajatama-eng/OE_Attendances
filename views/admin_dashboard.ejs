<%- include('partials/header',{user:user, title:'Admin Dashboard'}) %>

  <% if (typeof query !=='undefined' && query && query.msg) { %>
    <div class="mb-4">
      <% if (query.msg==='deletedAll' ) { %>
        <div class="alert alert-success border-0 shadow-sm rounded-3">Semua history jam kerja berhasil dihapus.</div>
        <% } else if (query.msg==='deletedUser' ) { %>
          <div class="alert alert-success border-0 shadow-sm rounded-3">History jam kerja staff berhasil dihapus.</div>
          <% } else if (query.msg==='noUser' ) { %>
            <div class="alert alert-warning border-0 shadow-sm rounded-3">Pilih staff terlebih dahulu.</div>
            <% } else if (query.msg==='error' ) { %>
              <div class="alert alert-danger border-0 shadow-sm rounded-3">Terjadi kesalahan saat memproses data.</div>
              <% } else if (query.msg==='userUpdated' ) { %>
                <div class="alert alert-success border-0 shadow-sm rounded-3">Data user berhasil diupdate.</div>
                <% } else if (query.msg==='userDeleted' ) { %>
                  <div class="alert alert-success border-0 shadow-sm rounded-3">User beserta history absen berhasil
                    dihapus.</div>
                  <% } else if (query.msg==='userNotFound' ) { %>
                    <div class="alert alert-warning border-0 shadow-sm rounded-3">User tidak ditemukan.</div>
                    <% } else if (query.msg==='settingsUpdated' ) { %>
                      <div class="alert alert-success border-0 shadow-sm rounded-3">System settings updated
                        successfully.</div>
                      <% } %>
    </div>
    <% } %>

      <div class="row mb-4">
        <!-- Left: Office Location (Simple) -->
        <div class="col-md-8">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
              <h5 class="fw-bold text-primary mb-3"><i class="fas fa-location-arrow me-2"></i>Office Location Settings
              </h5>

              <div class="alert alert-info border-0 shadow-sm small">
                <i class="fas fa-info-circle me-1"></i>
                Enter the latitude and longitude of your office. Staff must be within the specified radius to check in.
              </div>

              <form action="/admin/settings/update" method="POST">
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label class="form-label small text-muted fw-bold">Latitude</label>
                    <input type="text" name="officeLat" class="form-control" value="<%= settings.officeLat %>" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label class="form-label small text-muted fw-bold">Longitude</label>
                    <input type="text" name="officeLng" class="form-control" value="<%= settings.officeLng %>" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label class="form-label small text-muted fw-bold">Radius (Meters)</label>
                    <input type="number" name="officeRadius" class="form-control" value="<%= settings.officeRadius %>"
                      required>
                  </div>
                </div>
                <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save me-1"></i> Save Settings
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Right: Quick Actions -->
        <div class="col-md-4 d-flex flex-column gap-3">

          <!-- Daily QR Button -->
          <div class="card border-0 shadow-sm bg-primary text-white text-center p-4">
            <h5 class="fw-bold mb-1">Attendance QR</h5>
            <p class="small opacity-75 mb-3">Ensure staff scan this to check in.</p>
            <button class="btn btn-light text-primary fw-bold w-100 py-2" data-bs-toggle="modal"
              data-bs-target="#qrModal">
              <i class="fas fa-qrcode me-2"></i>Show Today's QR
            </button>
          </div>

          <!-- Manage History & Tools -->
          <div class="card border-0 shadow-sm flex-grow-1">
            <div class="card-body p-3">
              <h6 class="fw-bold small text-uppercase mb-3 text-muted">Data Management</h6>

              <button class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#manageHistoryModal">
                <i class="fas fa-cog me-1"></i> Manage History
              </button>
            </div>
          </div>

          <!-- MODAL: Manage History -->
          <div class="modal fade" id="manageHistoryModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0">
                  <h5 class="modal-title fw-bold">Manage History</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-0">

                  <!-- DANGER ZONE -->
                  <div class="bg-danger-subtle p-3 rounded mb-4">
                    <label class="small text-danger fw-bold text-uppercase mb-2">Danger Zone</label>

                    <!-- Delete ALL -->
                    <form action="/admin/attendance/delete-all" method="POST" class="mb-3"
                      onsubmit="return confirm('WARNING: Are you sure you want to DELETE ALL HISTORY? This cannot be undone!');">
                      <button class="btn btn-danger w-100 fw-bold">
                        Delete ALL History
                      </button>
                    </form>

                    <!-- Delete User Specific -->
                    <form action="/admin/attendance/delete-by-user" method="POST" class="d-flex gap-2"
                      onsubmit="return confirm('Delete history for selected user?');">
                      <select name="userId" class="form-select form-select-sm" required>
                        <option value="">- Select Staff -</option>
                        <% users.forEach(u=> { %>
                          <option value="<%= u._id %>">
                            <%= u.name %>
                          </option>
                          <% }) %>
                      </select>
                      <button class="btn btn-sm btn-outline-danger bg-white">Delete</button>
                    </form>
                  </div>

                  <hr class="opacity-10 my-4">

                  <!-- Export Data -->
                  <div>
                    <h6 class="fw-bold mb-3">Export Data</h6>

                    <!-- Export ALL -->
                    <a href="/admin/attendance/export-all-xlsx" class="btn btn-success w-100 mb-3 text-white fw-bold">
                      Export All (.xlsx)
                    </a>

                    <label class="small text-muted fw-bold mb-1">Date Range</label>
                    <form action="/admin/attendance/export-all-xlsx" method="GET">
                      <div class="input-group mb-2">
                        <input type="date" name="startDate" class="form-control" required>
                        <span class="input-group-text bg-light text-muted">to</span>
                        <input type="date" name="endDate" class="form-control" required>
                      </div>
                      <button class="btn btn-outline-primary w-100">
                        Export Range
                      </button>
                    </form>
                  </div>

                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- User Management Table Row -->
      <div class="row">
        <div class="col-md-12">
          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">User Management</h4>
                <div class="d-flex gap-2">
                  <button class="btn btn-outline-dark rounded-pill" data-bs-toggle="modal"
                    data-bs-target="#scheduleModal">
                    <i class="fas fa-calendar-alt me-1"></i> Employee Overview
                  </button>
                  <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal"
                    data-bs-target="#editUserModal" onclick="window.prepareCreateUser()">
                    + New User
                  </button>
                </div>
              </div>

              <!-- MODAL: Staff Schedule (Saturday + Holidays) -->
              <style>
                #pills-tab .nav-link.active {
                  color: #fff !important;
                  font-weight: bold;
                }

                #pills-tab .nav-link {
                  color: #6c757d;
                }
              </style>
              <div class="modal fade" id="scheduleModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                  <div class="modal-content border-0 shadow-lg" style="border-radius: 1rem;">
                    <div class="modal-header border-0 pb-0">
                      <div>
                        <h5 class="modal-title fw-bold">Employee Overview Management</h5>
                      </div>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">

                      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button class="nav-link active" id="pills-today-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-today" type="button" role="tab">Today's Overview</button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button class="nav-link" id="pills-sat-tab" data-bs-toggle="pill" data-bs-target="#pills-sat"
                            type="button" role="tab">Saturday Attendance</button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button class="nav-link" id="pills-hols-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-hols" type="button" role="tab">Holidays</button>
                        </li>
                      </ul>

                      <div class="tab-content" id="pills-tabContent">
                        <!-- TAB 0: TODAY'S OVERVIEW (New) -->
                        <div class="tab-pane fade show active" id="pills-today" role="tabpanel">
                          <!-- Division Selector & Controls -->
                          <form action="/" method="GET" class="mb-3 d-flex align-items-center gap-2">
                            <label class="fw-bold small text-muted">Division:</label>
                            <select name="division" class="form-select form-select-sm" style="width: auto;"
                              onchange="this.form.submit()">
                              <% managedDivisions.forEach(div=> { %>
                                <option value="<%= div %>" <%=division===div ? 'selected' : '' %>><%= div %>
                                </option>
                                <% }) %>
                            </select>
                            <input type="hidden" name="month" value="<%= selectedMonth %>">
                            <input type="hidden" name="openModal" value="true">
                            <button type="submit" class="btn btn-sm btn-outline-primary">Refresh</button>
                          </form>

                          <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-hover align-middle">
                              <thead class="bg-light sticky-top">
                                <tr>
                                  <th>Name</th>
                                  <th>Division</th>
                                  <th>Status</th>
                                  <th>Work Timer</th>
                                  <th>Break Timer</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% memberSummaries.forEach(summary=> { %>
                                  <tr>
                                    <td>
                                      <div class="d-flex align-items-center">
                                        <div
                                          class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2"
                                          style="width: 32px; height: 32px; font-weight: bold; color: #555;">
                                          <%= summary.user.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                          <div class="fw-bold">
                                            <%= summary.user.name %>
                                          </div>
                                          <small class="text-muted">
                                            <%= summary.user.email %>
                                          </small>
                                        </div>
                                      </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">
                                        <%= summary.user.division %>
                                      </span></td>
                                    <td>
                                      <% if (summary.todayStats.status==='working' ) { %>
                                        <span class="badge bg-success">Working</span>
                                        <% } else if (summary.todayStats.status==='break' ) { %>
                                          <span class="badge bg-warning">Break</span>
                                          <% } else { %>
                                            <span class="badge bg-secondary">Idle</span>
                                            <% } %>
                                    </td>
                                    <td>
                                      <span class="live-timer-work"
                                        data-base-seconds="<%= summary.todayStats.workSeconds %>"
                                        data-start-time="<%= summary.todayStats.currentWorkStart ? summary.todayStats.currentWorkStart.getTime() : '' %>">
                                        <%= summary.todayStats.workText %>
                                      </span>
                                    </td>
                                    <td>
                                      <span class="live-timer-break"
                                        data-base-seconds="<%= summary.todayStats.breakSeconds %>"
                                        data-start-time="<%= summary.todayStats.currentBreakStart ? summary.todayStats.currentBreakStart.getTime() : '' %>">
                                        <%= summary.todayStats.breakText %>
                                      </span>
                                    </td>
                                  </tr>
                                  <% }) %>
                              </tbody>
                            </table>
                          </div>
                        </div>

                        <!-- TAB 1: Saturday Attendance (Report) -->
                        <div class="tab-pane fade" id="pills-sat" role="tabpanel">

                          <form action="/" method="GET" class="mb-3 d-flex align-items-center gap-2">
                            <input type="hidden" name="openModal" value="true">
                            <label class="fw-bold small text-muted">Month:</label>
                            <input type="month" name="month" class="form-control form-control-sm" style="width: auto;"
                              value="<%= selectedMonth %>">
                            <button type="submit" class="btn btn-sm btn-outline-primary">Refresh</button>
                          </form>

                          <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-hover align-middle">
                              <thead class="bg-light sticky-top">
                                <tr>
                                  <th>Name</th>
                                  <th>Division</th>
                                  <th class="text-center">Total Hours (Sat)</th>
                                  <th>Report</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% users.forEach(function(u) { if (u.hasSaturdayAttendance) { %>
                                  <tr>
                                    <td>
                                      <div class="d-flex flex-column">
                                        <span class="fw-bold small">
                                          <%= u.name %>
                                        </span>
                                        <span class="text-muted" style="font-size: 0.75rem;">
                                          <%= u.email %>
                                        </span>
                                      </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">
                                        <%= u.division %>
                                      </span></td>
                                    <td class="text-center fw-bold">
                                      <%= u.saturdayHoursStr %>
                                    </td>
                                    <td>
                                      <a href="/admin/attendance/export-saturday?userId=<%= u._id %>&month=<%= selectedMonth %>"
                                        class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Download (.xlsx)
                                      </a>
                                    </td>
                                  </tr>
                                  <% } }); %>
                                    <% if (!users.some(u=> u.hasSaturdayAttendance)) { %>
                                      <tr>
                                        <td colspan="4" class="text-center text-muted">No Saturday attendance found for
                                          this month.</td>
                                      </tr>
                                      <% } %>
                              </tbody>
                            </table>
                          </div>
                        </div>

                        <!-- TAB 2: Holidays -->
                        <div class="tab-pane fade" id="pills-hols" role="tabpanel">
                          <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">Add New Holiday</label>
                            <form action="/admin/holidays/add" method="POST" class="d-flex gap-2">
                              <input type="date" name="date" class="form-control" required>
                              <button class="btn btn-primary text-nowrap">Add Date</button>
                            </form>
                          </div>

                          <hr>

                          <h6 class="fw-bold small text-muted mb-3">Upcoming Holidays</h6>
                          <% const holidays=(typeof settings !=='undefined' && settings.holidays) ? settings.holidays :
                            []; %>
                            <% if (holidays.length> 0) { %>
                              <div class="d-flex flex-wrap gap-2">
                                <% holidays.forEach(h=> { %>
                                  <div class="badge bg-light text-dark border p-2 d-flex align-items-center gap-2">
                                    <span style="font-size: 1rem;">
                                      <%= h %>
                                    </span>
                                    <form action="/admin/holidays/remove" method="POST" class="d-inline m-0 p-0">
                                      <input type="hidden" name="date" value="<%= h %>">
                                      <button type="submit" class="btn-close btn-close-white"
                                        style="width: 0.5em; height: 0.5em; filter: none; opacity: 0.5; font-size: 0.8rem;"></button>
                                      <i class="fas fa-times text-danger cursor-pointer"
                                        onclick="this.parentNode.submit()"></i>
                                    </form>
                                  </div>
                                  <% }) %>
                              </div>
                              <% } else { %>
                                <p class="text-muted small">No holidays set.</p>
                                <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Search -->
              <div class="input-group mb-3">
                <span class="input-group-text bg-light border-end-0"><svg width="16" height="16" viewBox="0 0 24 24"
                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                  </svg></span>
                <input type="text" id="user-search" class="form-control border-start-0 ps-0"
                  placeholder="Search by name or email...">
              </div>

              <div class="table-responsive">
                <table class="table table-hover align-middle" id="users-table">
                  <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                      <th class="border-0 rounded-start ps-3">Name</th>
                      <th class="border-0">Email</th>
                      <th class="border-0">Role</th>
                      <th class="border-0">Division</th>
                      <th class="border-0">History</th>
                      <th class="border-0 rounded-end pe-3 text-end">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(u=> { %>
                      <tr>
                        <td class="ps-3 fw-medium user-name">
                          <%= u.name %>
                        </td>
                        <td class="text-muted user-email">
                          <%= u.email || '—' %>
                        </td>
                        <td><span class="badge bg-soft text-dark border">
                            <%= u.role %>
                          </span></td>
                        <td>
                          <span class="badge bg-light text-dark border">
                            <%= u.division %>
                          </span>
                        </td>
                        <td>
                          <form method="GET" action="/admin/attendance/export-by-user" class="d-inline">
                            <input type="hidden" name="userId" value="<%= u._id %>">
                            <button class="btn btn-sm btn-outline-success px-2 py-1 rounded-pill"
                              title="Download Excel">
                              <i class="fas fa-file-excel me-1"></i> History
                            </button>
                          </form>
                        </td>
                        <td class="pe-3 text-end">
                          <button class="btn btn-sm btn-icon btn-white border shadow-sm me-1" data-bs-toggle="modal"
                            data-bs-target="#editUserModal" data-mode="edit" data-id="<%= u._id %>"
                            data-name="<%= u.name %>" data-email="<%= u.email %>" data-role="<%= u.role %>"
                            data-division="<%= u.division %>" data-secondary-division="<%= u.secondaryDivision || '' %>"
                            data-access="<%= u.canAccessSupervisorDashboard ? 'true' : 'false' %>"
                            data-work-hours="<%= u.durationWorkHours %>"
                            data-break-minutes="<%= u.durationBreakMinutes %>"
                            data-work-days="<%= (u.workingDays || [1,2,3,4,5]).join(',') %>" title="Edit">
                            Edit
                          </button>

                          <form method="POST" action="/admin/delete-user" style="display:inline"
                            onsubmit="return confirm('Yakin ingin menghapus user ini beserta semua history absennya?');">
                            <input type="hidden" name="userId" value="<%= u._id %>">
                            <button class="btn btn-sm btn-icon btn-white border shadow-sm text-danger" title="Delete">
                              Del
                            </button>
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- MODAL CREATE / EDIT USER -->
      <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <form method="POST" id="userForm" action="/admin/create-user" class="modal-content border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
              <h5 class="modal-title fw-bold" id="editUserModalLabel">Create User</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-4">
              <input type="hidden" name="userId" id="userIdInput">

              <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Full Name</label>
                <input name="name" id="nameInput" class="form-control" required placeholder="e.g. John Doe">
              </div>
              <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Email Address</label>
                <input name="email" id="emailInput" class="form-control" required placeholder="e.g. john@example.com">
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label small fw-bold text-muted">Role</label>
                  <select name="role" id="roleInput" class="form-select">
                    <option>Staff</option>
                    <option>Supervisor</option>
                    <option>Operational Manager</option>
                    <option>General Manager</option>
                    <option>Admin</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label small fw-bold text-muted">Main Division</label>
                  <select name="division" id="divisionInput" class="form-select">
                    <option value="GM">General Manager(GM)</option>
                    <option value="Admin">Admin</option>
                    <option value="OC">ONEderland Consulting (OC)</option>
                    <option value="N1">Neurone (N1)</option>
                    <option value="SnG">Strategy and Growth (SnG)</option>
                    <option value="e1">Education ONE (e1)</option>
                    <option value="CE">Carbonenergy (CE)</option>
                    <option value="EC">English Cafe (EC)</option>
                    <option value="PX">PeraONE Experience (PX)</option>
                    <option value="FN">Finance (FN)</option>
                    <option value="HR">Human Resource (HR)</option>
                    <option value="All Division">All Division</option>
                  </select>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label small fw-bold text-muted">Work Hours (daily)</label>
                  <input type="number" name="durationWorkHours" id="workHoursInput" class="form-control" value="8"
                    required>
                </div>
                <div class="col-md-6">
                  <label class="form-label small fw-bold text-muted">Break Duration (minutes)</label>
                  <input type="number" name="durationBreakMinutes" id="breakMinutesInput" class="form-control"
                    value="60" required>
                </div>
              </div>

              <div class="mb-3">
                <div class="d-flex justify-content-between">
                  <label class="form-label small fw-bold text-muted">Secondary Division (Optional)</label>
                  <button type="button" class="btn btn-link btn-sm p-0 text-decoration-none" id="addDivisionBtn"
                    onclick="document.getElementById('secondaryDivisionWrapper').classList.remove('d-none'); document.getElementById('secondaryDivisionWrapper').style.display='block';">+
                    Add</button>
                </div>
                <div class="d-none" id="secondaryDivisionWrapper">
                  <select name="secondaryDivision" id="secondaryDivisionInput" class="form-select">
                    <option value="">— Select Additional Division —</option>
                    <option value="Admin">Admin</option>
                    <option value="General Manager">General Manager(GM)</option>
                    <option value="OC">ONEderland Consulting (OC)</option>
                    <option value="N1">Neurone (N1)</option>
                    <option value="SnG">Strategy and Growth (SnG)</option>
                    <option value="e1">Education ONE (e1)</option>
                    <option value="CE">Carbonenergy (CE)</option>
                    <option value="EC">English Cafe (EC)</option>
                    <option value="PX">PeraONE Experience (PX)</option>
                    <option value="FN">Finance (FN)</option>
                    <option value="HR">Human Resource (HR)</option>
                    <option value="All Division">All Division</option>
                  </select>
                </div>
              </div>

              <div class="mb-3">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="accessInput" name="canAccessSupervisorDashboard">
                  <label class="form-check-label small" for="accessInput">Allow access to Supervisor Dashboard</label>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Password</label>
                <input type="password" name="password" id="passwordInput" class="form-control"
                  placeholder="Leave blank to keep current password">
