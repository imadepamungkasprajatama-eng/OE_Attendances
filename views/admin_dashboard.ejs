      <script>
        // Generate QR
        const genQrBtn = document.getElementById('gen-qr');
        if (genQrBtn) {
          genQrBtn.addEventListener('click', async () => {
            const res = await fetch('/admin/generate-qr', { method: 'POST' });
            const data = await res.json();
            if (data.dataUrl) {
              const container = document.getElementById('qr-area');
              const btn = document.getElementById('gen-qr');

              // Hide button, show container
              btn.classList.add('d-none');
              container.classList.remove('d-none');

              container.innerHTML =
                '<div class="bg-light p-3 rounded-3 d-inline-block mb-3">' +
                '<img src="' + data.dataUrl + '" id="generated-qr-img" class="img-fluid" style="max-width:200px">' +
                '</div>' +
                '<p class="small text-muted text-monospace mb-2 text-break">token: ' + data.token.slice(0, 30) + '...</p>' +
                '<button id="download-qr-btn" class="btn btn-sm btn-outline-primary rounded-pill px-3">Download QR</button>';

              setupDownloadBtn(data.dataUrl);
            } else {
              alert('No QR returned');
            }
          });
        }

        function setupDownloadBtn(dataUrl) {
          const btn = document.getElementById('download-qr-btn');
          if (!btn) return;
          btn.onclick = function () {
            const link = document.createElement('a');
            link.href = dataUrl || document.querySelector('#qr-area img')?.src;
            const today = new Date().toISOString().slice(0, 10);
            link.download = 'attendance-qr-' + today + '.png';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
          };
        }

        // Initial setup if token exists on load
        (function () {
          fetch('/admin/qr/current')
            .then(r => r.json())
            .then(d => {
              if (d.dataUrl) {
                const img = document.getElementById('qr-img');
                if (img) img.src = d.dataUrl;
                setupDownloadBtn(d.dataUrl);
              }
            })
            .catch(console.error);
        })();

        // SEARCH USER (client-side filter)
        (function () {
          const searchInput = document.getElementById('user-search');
          const table = document.getElementById('users-table');
          if (!searchInput || !table) return;

          searchInput.addEventListener('input', function () {
            const q = this.value.toLowerCase();
            const rows = table.querySelectorAll('tbody tr');
            rows.forEach(row => {
              const name = (row.querySelector('.user-name')?.textContent || '').toLowerCase();
              const email = (row.querySelector('.user-email')?.textContent || '').toLowerCase();
              if (!q || name.includes(q) || email.includes(q)) {
                row.style.display = '';
              } else {
                row.style.display = 'none';
              }
            });
          });
        })();

        // MODAL CREATE / EDIT USER
        (function () {
          const modalEl = document.getElementById('editUserModal');
          const form = document.getElementById('userForm');
          const idInput = document.getElementById('userIdInput');
          const nameInput = document.getElementById('nameInput');
          const emailInput = document.getElementById('emailInput');
          const roleInput = document.getElementById('roleInput');
          const divisionInput = document.getElementById('divisionInput');
          const secondaryDivisionInput = document.getElementById('secondaryDivisionInput');
          const secondaryDivisionWrapper = document.getElementById('secondaryDivisionWrapper');
          const addDivisionBtn = document.getElementById('addDivisionBtn');
          const passwordInput = document.getElementById('passwordInput');
          const accessInput = document.getElementById('accessInput');
          const workHoursInput = document.getElementById('workHoursInput');
          const breakMinutesInput = document.getElementById('breakMinutesInput');
          const titleEl = document.getElementById('editUserModalLabel');


          // dipanggil saat klik tombol "Create User"
          window.prepareCreateUser = function () {
            if (!form) return;
            form.action = '/admin/create-user';
            idInput.value = '';
            nameInput.value = '';
            emailInput.value = '';
            roleInput.value = 'Staff';
            if (divisionInput) divisionInput.value = 'OC';
            if (secondaryDivisionInput) secondaryDivisionInput.value = '';
            if (secondaryDivisionWrapper) secondaryDivisionWrapper.classList.add('d-none');
            if (accessInput) accessInput.checked = false;
            if (workHoursInput) workHoursInput.value = '8';
            if (breakMinutesInput) breakMinutesInput.value = '60';
            passwordInput.value = '';
            if (titleEl) titleEl.textContent = 'Create User';
          };

          if (modalEl) {
            modalEl.addEventListener('show.bs.modal', function (event) {
              const button = event.relatedTarget;
              if (!button) {
                console.error("Modal triggered but no relatedTarget found");
                return;
              }
              const mode = button.getAttribute('data-mode');
              console.log("[Modal Debug] Mode:", mode);

              if (mode === 'edit') {
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name') || '';
                const email = button.getAttribute('data-email') || '';
                console.log("[Modal Debug] Editing:", { id, name, email });

                const role = button.getAttribute('data-role') || 'Staff';
                const division = button.getAttribute('data-division') || 'OC';
                const secondaryDivision = button.getAttribute('data-secondary-division') || '';
                const access = button.getAttribute('data-access') === 'true';
                const workHours = button.getAttribute('data-work-hours') || '8';
                const breakMinutes = button.getAttribute('data-break-minutes') || '60';

                form.action = '/admin/update-user';
                idInput.value = id;
                nameInput.value = name;
                emailInput.value = email;
                roleInput.value = role;

                if (divisionInput) divisionInput.value = division;

                if (secondaryDivisionInput && secondaryDivisionWrapper) {
                  if (secondaryDivision) {
                    secondaryDivisionInput.value = secondaryDivision;
                    secondaryDivisionWrapper.classList.remove('d-none');
                  } else {
                    secondaryDivisionInput.value = '';
                    secondaryDivisionWrapper.classList.add('d-none');
                  }
                }

                if (accessInput) accessInput.checked = access;
                if (workHoursInput) workHoursInput.value = workHours;
                if (breakMinutesInput) breakMinutesInput.value = breakMinutes;

                const shiftGroupInput = document.getElementById('shiftGroupInput');
                if (shiftGroupInput) {
                  const grp = button.getAttribute('data-shift-group');
                  shiftGroupInput.value = grp || '';
                }

                passwordInput.value = '';

                if (titleEl) titleEl.textContent = 'Edit User';
              } else {
                window.prepareCreateUser();
              }
            });

            if (addDivisionBtn && secondaryDivisionWrapper) {
              console.log("[Admin Debug] Add Division Button Found");
              addDivisionBtn.addEventListener('click', function () {
                console.log("[Admin Debug] Add Division Clicked");
                secondaryDivisionWrapper.classList.remove('d-none');
                secondaryDivisionWrapper.style.display = 'block'; // Force show
                this.style.display = 'none'; // Optional: hide the "+ Add" button after clicking? No, maybe user wants to toggle (logic doesn't support toggle yet)
              });
            } else {
              console.error("[Admin Debug] Add Division Elements Missing", { btn: !!addDivisionBtn, wrapper: !!secondaryDivisionWrapper });
            }
          }
        })();

        // --- Saturday Shift Group Logic ---
        function selectShiftGroup(group) {
          const checkboxes = document.querySelectorAll('#saturdayUserList input[type="checkbox"]');
          checkboxes.forEach(cb => {
            if (group === 'Clear') {
              cb.checked = false;
            } else {
              const userGroup = cb.getAttribute('data-group');
              // Logic: Select users in the requested group OR users in 'All' group
              if (userGroup === group || userGroup === 'All') {
                cb.checked = true;
              } else {
                cb.checked = false;
              }
            }
          });
        }
      </script>

