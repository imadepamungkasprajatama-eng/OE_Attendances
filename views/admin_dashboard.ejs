      <script>
        // --- QR Code AJAX Logic ---
        const qrForm = document.getElementById('generateQrForm');
        if (qrForm) {
          qrForm.addEventListener('submit', async function (e) {
            e.preventDefault();
            const btn = document.getElementById('generateQrBtn');
            const originalText = btn.innerHTML;

            try {
              btn.disabled = true;
              btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';

              const response = await fetch('/admin/generate-qr', { method: 'POST' });
              if (!response.ok) throw new Error('Failed to generate');

              const data = await response.json();

              // Update Image
              const imgContainer = document.querySelector('#qrModal .modal-body .bg-light');
              // Remove placeholder if exists
              const ph = document.getElementById('qrPlaceholder');
              if (ph) ph.remove();

              imgContainer.innerHTML = `<img src="${data.dataUrl}" alt="QR Code" class="img-fluid" style="max-height: 220px;">`;

              // Update Token String
              const tokenDisplay = document.getElementById('tokenStringDisplay');
              tokenDisplay.innerText = data.token;
              tokenDisplay.classList.remove('d-none');

              // Update Download Button
              const dlBtn = document.getElementById('downloadQrBtn');
              dlBtn.href = data.dataUrl;
              dlBtn.classList.remove('d-none');

              // REMOVE THE GENERATE BUTTON ON SUCCESS
              qrForm.remove();

            } catch (err) {
              console.error(err);
              alert('Error generating QR Code');
              btn.disabled = false;
              btn.innerHTML = originalText;
            }
          });
        }
      </script>

