          <!-- Real-Time Timer Script (Admin) -->
          <script>
            function formatDuration(totalSeconds) {
              const h = Math.floor(totalSeconds / 3600);
              const m = Math.floor((totalSeconds % 3600) / 60);
              const s = Math.floor(totalSeconds % 60);
              return `${String(h).padStart(2, '0')}:${String(m).padStart(2, '0')}:${String(s).padStart(2, '0')}`;
            }

            setInterval(() => {
              const now = Date.now();

              // Update Work Timers
              document.querySelectorAll('.live-timer-work').forEach(el => {
                const baseSeconds = parseInt(el.getAttribute('data-base-seconds') || '0');
                const startTimeStr = el.getAttribute('data-start-time');
                if (startTimeStr) {
                  const startTime = parseInt(startTimeStr);
                  const elapsed = Math.floor((now - startTime) / 1000);
                  el.textContent = formatDuration(baseSeconds + elapsed);
                }
              });

              // Update Break Timers
              document.querySelectorAll('.live-timer-break').forEach(el => {
                const baseSeconds = parseInt(el.getAttribute('data-base-seconds') || '0');
                const startTimeStr = el.getAttribute('data-start-time');
                if (startTimeStr) {
                  const startTime = parseInt(startTimeStr);
                  const elapsed = Math.floor((now - startTime) / 1000);
                  el.textContent = formatDuration(baseSeconds + elapsed);
                }
              });
            }, 1000);

            // Auto-Logout on Tab Close (Delayed by 1 min)
            window.addEventListener('pagehide', () => {
              navigator.sendBeacon('/auth/logout-delayed');
            });
          </script>

