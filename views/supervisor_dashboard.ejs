                <script>
                  // Real-time Timer Logic for Supervisor Modal
                  setInterval(() => {
                    const timers = document.querySelectorAll('.realtime-timer');
                    const now = Date.now();

                    timers.forEach(timer => {
                      const start = timer.getAttribute('data-start'); // Timestamp (ms)
                      const base = parseFloat(timer.getAttribute('data-base') || 0); // Seconds

                      if (start) {
                        const startTime = parseInt(start);
                        const elapsedSeconds = (now - startTime) / 1000;
                        const totalSeconds = base + elapsedSeconds;
                        timer.innerText = formatDuration(totalSeconds);
                      } else {
                        // Not active, just show base
                        // (Optional: logic to fix drifting if needed, but base is static here)
                      }
                    });
                  }, 1000);

                  function formatDuration(sec) {
                    sec = Math.floor(sec);
                    if (sec < 0) sec = 0;
                    const h = Math.floor(sec / 3600);
                    const m = Math.floor((sec % 3600) / 60);
                    const s = sec % 60;
                    const pad = n => n.toString().padStart(2, '0');
                    return `${pad(h)}:${pad(m)}:${pad(s)}`;
                  }
                </script>